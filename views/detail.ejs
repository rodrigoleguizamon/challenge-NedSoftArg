<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'detail'}) %>
<body>
	<%- include('partials/header')%>
    <!-- product detail -->
	<div class="container products-wrapper">
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/images/products/<%= product.image %>" alt="product image" class="product-detail-img">
					<p class="product-detail-description">
						<%= product.description %>
					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%= product.name %></h2>
						
							<p class="product-detail-price small">
								<span>$ <%= product.price %></span>
								/
								<b><%= product.discount %>% OFF</b>
							</p>
							<p class="product-detail-price">
								PRECIO:
							</p>
							<p class="product-detail-price">
								$ <%= product.price %>
							</p>

						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pag√° en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>
						<button type="button" class="btn btn-outline-dark" style="padding: 15px; border-radius: 8px; margin-bottom: 15px;font-size: 1.6em;">COMPRAR AHORA</button>
						<hr>

					</article>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

</body>	
</html>